# hello world
#可视化地图基本使用
from pyecharts.charts import Map
from pyecharts.options import VisualMapOpts
#准备地图对象
map = Map()
#准备数据
data = [
    ("浙江",100),
    ("山西",50),
    ("天津",70),
    ("北京",150)
]
#添加数据
map.add("测试地图",data,"china")
#改变图例
map.set_global_opts(
    visualmap_opts=VisualMapOpts(is_show=True,
                                 is_inverse=True,
                                 pieces=[{"min":1,"max":9,"label":"1-9亿","color":""}])
)
#使用render函数生成地图
map.render()
